{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug BDD Runner",
            "program": "${workspaceFolder}/scripts/run-bdd.js",
            "args": [
                "DEV"
            ], // You can change this to STAGING or add tags
            "env": {
                "TEST_ENV": "DEV"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current Test File",
            "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
            "args": [
                "test",
                "${file}",
                "--headed",
                "--workers=1"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}